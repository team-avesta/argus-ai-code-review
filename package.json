{
  "name": "@team-avesta/argus-ai-code-review",
  "version": "1.2.2",
  "description": "A CLI-based code review tool to analyze and enforce best practices",
  "main": "dist/index-rule.js",
  "bin": {
    "argus-ai-code-review": "./dist/index.js"
  },
  "exports": {
    ".": "./dist/index-rule.js"
  },
  "eslintConfig": {
    "plugins": [
      "argus-ai-code-review"
    ]
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky",
    "prepublishOnly": "npm run test && npm run build",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch"
  },
  "keywords": [
    "code-review",
    "typescript",
    "cli",
    "best-practices"
  ],
  "author": "Team Avesta",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/team-avesta/argus-ai-code-review.git"
  },
  "bugs": {
    "url": "https://github.com/team-avesta/argus-ai-code-review/issues"
  },
  "homepage": "https://github.com/team-avesta/argus-ai-code-review#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/eslint": "^8.56.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@typescript-eslint/types": "^8.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^13.0.0",
    "eslint": "^8.56.0",
    "glob": "^11.0.1"
  }
}
