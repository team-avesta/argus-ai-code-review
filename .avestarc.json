{
  "plugins": [
    "avesta-code-review"
  ],
  "settings": {
    "aiReview": {
      "enabled": true,
      "ignorePatterns": [
        "**/*.test.ts",
        "**/*.spec.ts"
      ]
    }
  },
  "rules": {
    "avesta-code-review/react-props-helper": [
      "error",
      {
        "complexity": {
          "maxInlineProps": 2,
          "ignoreProps": [
            "style"
          ]
        }
      }
    ],
    "avesta-code-review/prometheus-label-config": "error",
    "avesta-code-review/handle-negative-first": [
      "error",
      {
        "maxNestingDepth": 1,
        "enforceThrow": false,
        "allowSingleNesting": false,
        "checkArrowFunctions": true,
        "checkAsyncFunctions": true,
        "checkGenerators": true,
        "checkTernaries": true,
        "checkTryCatch": true,
        "enforceEarlyReturn": true,
        "maxElseDepth": 2
      }
    ]
  }
}