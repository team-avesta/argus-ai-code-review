{
  "plugins": ["avesta-code-review"],
  "settings": {
    "aiReview": {
      "enabled": true,
      "ignorePatterns": ["**/*.test.ts", "**/*.spec.ts"],
      "rules": {
        "function-length": {
          "enabled": true,
          "maxLines": 20
        },
        "function-complexity": {
          "enabled": true,
          "metrics": ["cyclomatic", "cognitive"]
        },
        "single-responsibility": {
          "enabled": true
        }
      }
    }
  },
  "rules": {
    "avesta-code-review/react-props-helper": [
      "error",
      {
        "complexity": {
          "maxInlineProps": 2,
          "ignoreProps": ["style"]
        }
      }
    ],
    "avesta-code-review/prometheus-label-config": "error",
    "avesta-code-review/handle-negative-first": [
      "error",
      {
        "maxNestingDepth": 1,
        "enforceThrow": false,
        "allowSingleNesting": false,
        "checkArrowFunctions": true,
        "checkAsyncFunctions": true,
        "checkGenerators": true,
        "checkTernaries": true,
        "checkTryCatch": true,
        "enforceEarlyReturn": true,
        "maxElseDepth": 2
      }
    ]
  }
}
